<%- include("../shared/_header") %>

    <div class="container mt-5">
        <h1>Post View</h1>

        <hr class="my-5">

        <% if(typeof post !== undefined) { %>
            <a href="/posts/<%= post.id %>/edit">Edit Post</a>
            
            <div>
                <div class="post-body">
                    <p class="post-text">
                        <%= post.content %>
                    </p>
                </div>
            </div>
            
            <a href="/posts">Back to Posts</a>
        <% } %>
    </div>

<%- include("../shared/_footer") %>