<%- include("../shared/_header") %>

<div class="container mt-5">
    <h1>Post View</h1>

    <hr class="my-5">

    <% if(typeof post !== undefined) { %>
        <div>
            <h2><%= post.title %></h2>
            <% if (post.image && typeof post.image === 'string') { %>
                <img src="	http://localhost:5200/<%= post.image %>" alt="<%= post.image %>" style="width: 300px; height: 300px;">
            <% } else { %>
                <p>No image available</p>
            <% } %>
            <p><%= post.content %></p>
        </div>

        <hr class="my-5">

        <!-- Form for adding a new comment -->
        <form action="/comments" method="post" class="mt-3">
            <input type="hidden" name="postId" value="<%= post.id %>">
            <input type="hidden" name="userId" value="<%= user.id %>">
            
            <div class="form-group mb-3">
                <label for="newCommentContent" class="form-label">Add a Comment</label>
                <textarea name="content" id="newCommentContent" class="form-control" required></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

        <hr class="my-5">

        <a href="/posts">Back to Posts</a>
    <% } %>
</div>

<%- include("../shared/_footer") %>
