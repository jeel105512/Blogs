<%- include("../shared/_header") %>

<div class="container mt-5">
    <h1>Comment List</h1>
    <hr class="my-5">
    <a href="/comments/new" class="btn btn-success mb-3">Create New Comment</a>
    <table class="table table-dark table-striped table-bordered">
        <thead>
            <tr>
                <th>Content</th>
                <th>Last Updated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if(typeof comments !== "undefined" && comments.length > 0) { %>
                <% comments.forEach(({ id, content, updatedAt }) => { %>
                    <tr>
                        <td><%= content %></td>
                        <td><%= updatedAt %></td>
                        <td>
                            <a href="/comments/<%= id %>" class="btn btn-primary btn-sm">View</a>
                            <a href="/comments/<%= id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                            <form action="/comments/<%= id %>" method="post" onsubmit="return confirm('Are you sure you want to permanently delete this comment?')" class="d-inline">
                                <input type="hidden" name="_method" value="delete">
                                <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            <% } %>
        </tbody>
    </table>
</div>

<%- include("../shared/_footer") %>