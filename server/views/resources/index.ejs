<%- include("../shared/_header") %>

<div class="container mt-5">
    <h1>Resources List</h1>

    <hr class="my-5">

    <a href="/resources/new">Create a new resource</a>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Content</th>
                <th>Author</th>
                <th>Type</th>
                <th>Last Updated</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            <% if (resources && resources.length > 0) { %>
                <% resources.forEach(({ id, author, content, type, updatedAt }) => { %>
                    <tr>
                        <td><%= content %></td>
                        <td>
                            <%= author?.nickname %>
                        </td>
                        <td><%= type %></td>
                        <td><%= updatedAt %></td>
                        <td>
                            <a href="/resources/<%= id %>">view</a> | 
                            <a href="/resources/<%= id %>/edit">edit</a> | 
                            <form action="/resources/<%= id %>" method="post" onsubmit="return confirm('Are you sure you want to delete this resource?')">
                                <input type="hidden" name="_method" value="delete">
                                <button class="standard-link" type="submit">delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            <% } %>
        </tbody>
    </table>
</div>

<%- include("../shared/_footer") %>